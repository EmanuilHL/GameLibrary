 @model AdminGamesViewModel

@{
    ViewBag.Title = "My Games";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<h4>My Added Games</h4>

@if (!Model.GamesAddedByAdmin.Any())
{
    <h2 class="text-center">You have no added games yet!</h2>
}

<div class="row">
    @foreach (var game in Model.GamesAddedByAdmin)
    {
        @await Html.PartialAsync("~/Views/Shared/_GamePartial.cshtml", game)
    }
</div>

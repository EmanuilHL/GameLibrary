@model RankFormModel

@{
    ViewBag.Title = "Give Rank";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.UserName" class="form-label">UserName</label>
                <input asp-for="@Model.UserName" class="form-control" aria-required="true" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.GameName" class="form-label">Game</label>
                <input asp-for="@Model.GameName" class="form-control" aria-required="true" />
                <span asp-validation-for="GameName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Apply Rank" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}